<%= render :partial => "views/base/top" %>
<%= render :partial => "views/header", :locals => {:isLoggedIn => true} %>
<%= render :partial => "views/mainNav" %>
<div class="content">
    <aside class="content__sidebar">
        <%= render :partial => "views/searchPeopleForm" %>
    </aside>
    <section class="center">
        <section class="widget">
            <header class="widget__header">
                <div class="pull-left">
                    <span class="label ">Тип сообщения:</span>
                </div>
                <div class="pull-left">
                    <div class="select">
                        <div class="select__label">Обычное</div>
                        <select name="messageType" id="messageType">
                            <option value="1">Обычное</option>
                            <option value="1">Просьба</option>
                        </select>
                    </div>
                </div>
            </header>

            <section class="messages">
                <div class="widget__rows_zebra">
                    <form action="#" class="widget__row widget__row_big">
                        <textarea></textarea>
                        <footer class="add-post__footer">
                            <div class="pull-left">
                                <input class="btn btn_green" type="submit" value="отправить"/>
                            </div>
                        </footer>
                    </form>
                </div>
                <div class="messages__status">
                    Алексей Иванов печатает вам...
                </div>
                <div class="messages-list">
                    <%= render :partial => "views/message", :locals => {:type => "messages__item_complain", :typeText => 'жалоба'} %>
                    <%= render :partial => "views/message", :locals => {:type => "messages__item_appeal", :typeText => 'просьба'} %>
                    <%= render :partial => "views/message", :locals => {:type => "messages__item_proposal", :typeText => 'предложение'} %>
                    <% (1..5).each do |n| %>
                      <%= render :partial => "views/message", :locals => {:type => "", :typeText => ''} %>
                      <%= render :partial => "views/message", :locals => {:type => "messages__item_mine", :typeText => ''} %>
                    <% end %>
                </div>
            </section>
        </section>
    </section>
</div>
<%= render :partial => "views/footer" %>
<%= render :partial => "views/base/bottom" %>